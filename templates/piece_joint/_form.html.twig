{% form_theme form 'form/_form_theme.html.twig' %}

{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.titre) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.formation) }}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        {{ form_row(form.description) }}
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        {{ form_label(form.fichier, 'Fichier', { label_attr: { class: 'form-label fw-bold' } }) }}
        <div class="custom-file">
            {{ form_widget(form.fichier, { attr: { class: 'custom-file-input', id: 'fileUpload' } }) }}
            <label class="custom-file-label" for="fileUpload">Choose file...</label>
        </div>
        {{ form_errors(form.fichier) }}
    </div>
</div>

{{ form_widget(form._token) }}

<div class="mt-3">
    <button type="submit" class="btn btn-success">{{ button_label|default('Ajouter Pi√®ce Jointe') }}</button>
    <a href="{{ path('app_formations_index') }}" class="btn btn-secondary">Back to list</a>
</div>

{{ form_end(form, { render_rest: false }) }}
