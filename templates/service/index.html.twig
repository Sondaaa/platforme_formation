{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <a href="{{ path('app_service_new') }}" class="btn btn-sm btn-primary shadow-sm">
      <i class="fas fa-plus fa-sm text-white-50"></i> Créer un service
    </a>
  </div>

  <div class="row">
    <div class="col">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Liste des Services</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
              <thead class="thead-light">
                <tr>
                  <th>Titre</th>
                  <th>Photo</th>
                  <th>Description</th>
                  <th>Créé le</th>
                  <th>Mis à jour le</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for service in services %}
                  <tr>
                    <td>{{ service.titre }}</td>
                    <td>
                      {% if service.photo %}
                        <img src="{{ asset('uploads/photos/' ~ service.photo) }}" alt="{{ service.titre }}" style="height:40px;">
                      {% else %}
                        <span class="text-muted">Aucune</span>
                      {% endif %}
                    </td>
                    <td>{{ service.description|length > 50 ? service.description[:50] ~ '...' : service.description }}</td>
                    <td>{{ service.createdAt ? service.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ service.updatedAt ? service.updatedAt|date('d/m/Y H:i') : '' }}</td>
                    <td>
                      <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> Voir
                      </a>
                      <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                      </a>
                      <form method="post" action="{{ path('app_service_delete', {'id': service.id}) }}" style="display:inline-block" onsubmit="return confirm('Voulez-vous vraiment supprimer ce service ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                        <button class="btn btn-sm btn-danger">
                          <i class="fas fa-trash"></i> Supprimer
                        </button>
                      </form>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="6" class="text-center">Aucun service trouvé</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
