<script>
let currentIndex = -1;
let marks = [];

function removeHighlights() {
  document.querySelectorAll("mark").forEach(el => {
    el.replaceWith(el.textContent);
  });
  marks = [];
  currentIndex = -1;
}

function highlightText(query) {
  if (!query) return;
  const regex = new RegExp(query, "gi");
  const walker = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT, null, false);

  let node;
  while ((node = walker.nextNode())) {
    if (["SCRIPT","STYLE","MARK","INPUT","TEXTAREA"].includes(node.parentNode.tagName)) continue;

    if (regex.test(node.nodeValue)) {
      const frag = document.createDocumentFragment();
      let lastIndex = 0;
      node.nodeValue.replace(regex, (match, offset) => {
        // texte avant le match
        frag.appendChild(document.createTextNode(node.nodeValue.slice(lastIndex, offset)));

        // le match surligné
        const mark = document.createElement("mark");
        mark.textContent = match;
        frag.appendChild(mark);

        lastIndex = offset + match.length;
      });

      // texte après le dernier match
      frag.appendChild(document.createTextNode(node.nodeValue.slice(lastIndex)));

      node.replaceWith(frag);
    }
  }

  marks = Array.from(document.querySelectorAll("mark"));
}

function jumpTo(index) {
  if (marks.length === 0) return;
  marks.forEach(m => m.style.background = "yellow"); // reset
  const el = marks[index];
  el.style.background = "orange"; // actif
  el.scrollIntoView({behavior: "smooth", block: "center"});
}

document.getElementById('searchInput').addEventListener('input', function() {
  removeHighlights();
  const query = this.value.trim();
  if (query) {
    highlightText(query);
    if (marks.length > 0) {
      currentIndex = 0;
      jumpTo(currentIndex);
    }
  }
});

document.getElementById('nextBtn').addEventListener('click', function() {
  if (marks.length === 0) return;
  currentIndex = (currentIndex + 1) % marks.length; // navigation circulaire
  jumpTo(currentIndex);
});

document.getElementById('prevBtn').addEventListener('click', function() {
  if (marks.length === 0) return;
  currentIndex = (currentIndex - 1 + marks.length) % marks.length; // navigation circulaire
  jumpTo(currentIndex);
});
</script>