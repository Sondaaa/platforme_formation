<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>
      {% block title %}
        Admin
      {% endblock %}
    </title>

    {# SB Admin core CSS #}
    <link href="{{ asset('css/css-admin/styles.css') }}" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    {% block stylesheets %}
    {% endblock %}
  </head>
  <body class="sb-nav-fixed">
    {# Top Navbar #}
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
      <a class="navbar-brand ps-3" href="{{ path('app_home') }}">FORMATION E-LEARNING</a>
      <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
    </nav>

    <div id="layoutSidenav">
      {# Sidebar #}
      <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
          <div class="sb-sidenav-menu">
            <div class="nav">
              <a class="nav-link" href="{{ path('app_home') }}">
                <div class="sb-nav-link-icon">
                  <i class="fas fa-tachometer-alt"></i>
                </div>Dashboard
              </a>
              <a class="nav-link" href="{{ path('app_societe_index') }}">
                <div class="sb-nav-link-icon">
                  <i class="fas fa-building"></i>
                </div>Sociétés
              </a>
              <a class="nav-link" href="{{ path('app_utilisateur_index') }}">
                <div class="sb-nav-link-icon">
                  <i class="fas fa-building"></i>
                </div>Utilisateur
              </a>
              <a class="nav-link" href="{{ path('app_formations_index') }}">
                <div class="sb-nav-link-icon">
                  <i class="fas fa-building"></i>
                </div>Formations
              </a>
            </div>
          </div>
        </nav>
      </div>

      {# Main Content #}
      <div id="layoutSidenav_content">
        <main class="container-fluid px-4 mt-4">
          {% block body %}
          {% endblock %}
        </main>

        {# Footer #}
        <footer class="py-4 bg-light mt-auto">
          <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
              <div class="text-muted">FORMATION E LEARNING 2025</div>
              <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>

    {# SB Admin JS #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/js-admin/scripts.js') }}"></script>
    {% block javascripts %}
    {% endblock %}
  </body>
</html>
