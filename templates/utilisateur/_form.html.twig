{% form_theme form 'form/_form_theme.html.twig' %}
{{ form_start(form) }}

<div class="row">
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
</div>

<div class="row">
    {{ form_row(form.email) }}
    {{ form_row(form.diplome) }}
</div>

<div class="row">
    {{ form_row(form.username) }}
    {{ form_row(form.password) }}
</div>

<div class="row">
    {{ form_row(form.datenaissance) }}
    {{ form_row(form.roles) }}
</div>

{# Your custom checkbox #}
<div class="col-md-6 mb-3">
  <div class="form-check">
    <input type="checkbox" id="utilisateur_isActive" name="utilisateur[isActive]" class="form-check-input" value="1" checked>
    <label for="utilisateur_isActive" class="form-check-label fw-bold">Is active</label>
  </div>
</div>

{# Only render hidden fields, no duplicates #}
{{ form_widget(form._token) }}

<div class="mt-3">
    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
    <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">Back to list</a>
</div>

{{ form_end(form, { 'render_rest': false }) }}
