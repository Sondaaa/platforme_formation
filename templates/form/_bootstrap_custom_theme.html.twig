{# Default row for any field #}
{% block form_row %}
<div class="col-md-6 mb-3">
    {{ form_label(form, null, { label_attr: { class: 'form-label fw-bold' } }) }}
    {{ form_widget(form, { attr: { class: 'form-control' } }) }}
    {{ form_errors(form) }}
</div>
{% endblock %}

{# Special case for file upload #}
{% block file_widget %}
<div class="custom-file">
    {{ block('form_widget_simple') }}
    <label class="custom-file-label" for="{{ id }}">Choose file...</label>
</div>
{% endblock %}

{# Submit button styling #}
{% block button_widget %}
<button type="{{ type|default('submit') }}" class="btn btn-primary">
    {% if icon is defined %}
        <i class="{{ icon }}"></i>
    {% endif %}
    {{ label|trans }}
</button>
{% endblock %}
