{% extends 'admin/base_admin.html.twig' %}

{% block title %}Sociétés{% endblock %}

{% block body %}
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sociétés</h1>
    <a href="{{ path('societe_new') }}" class="btn btn-sm btn-primary shadow-sm">
      <i class="fas fa-plus fa-sm text-white-50"></i> Create new
    </a>
  </div>

  <div class="row">
    <div class="col">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Liste des Sociétés</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
              <thead class="thead-light">
                <tr>
                  <th>Id</th>
                  <th>Rs</th>
                  <th>Adresse</th>
                  <th>Contact</th>
                  <th>Fax</th>
                  <th>Email</th>
                  <th>Logo</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for s in societes %}
                  <tr>
                    <td>{{ s.id }}</td>
                    <td>{{ s.rs }}</td>
                    <td>{{ s.adresse }}</td>
                    <td>{{ s.contact }}</td>
                    <td>{{ s.fax }}</td>
                    <td>{{ s.email }}</td>
                    <td>
                      {% if s.logo %}
                        <img src="{{ asset('uploads/logos/' ~ s.logo) }}" alt="logo" style="height:30px;">
                      {% endif %}
                    </td>
                    <td>
                      <a href="{{ path('societe_show', {'id': s.id}) }}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i> show
                      </a>
                      <a href="{{ path('societe_edit', {'id': s.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> edit
                      </a>
                      <form method="post" action="{{ path('societe_delete', {'id': s.id}) }}" style="display:inline-block" onsubmit="return confirm('Supprimer ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ s.id) }}">
                        <button class="btn btn-sm btn-danger">
                          <i class="fas fa-trash"></i> Supprimer
                        </button>
                      </form>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="8" class="text-center">No records found</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
